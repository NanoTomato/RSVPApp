<UserControl
    x:Class="RSVPApp.RSVPControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RSVPApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignWidth="400" Height="120">
    
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <TextBlock FontSize="24" Name="textBlock" FontFamily="Lucida Console"
                   Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="Black">
            1234567890123456789012345
        </TextBlock>
        <Canvas Grid.Row="0"
                HorizontalAlignment="Left" VerticalAlignment="Stretch">
            <Line X1="0" X2="400" Y1="20" Y2="20" Stroke="Black" StrokeThickness="4"
                  HorizontalAlignment="Stretch"/>
            <Line X1="94" X2="94" Y1="20" Y2="40" Stroke="Black" StrokeThickness="4"
                  HorizontalAlignment="Stretch"/>
        </Canvas>
        <Canvas Grid.Row="2"
                HorizontalAlignment="Left" VerticalAlignment="Stretch">
            <Line X1="0" X2="400" Y1="20" Y2="20" Stroke="Black" StrokeThickness="4"
                  HorizontalAlignment="Stretch"/>
            <Line X1="94" X2="94" Y1="20" Y2="0" Stroke="Black" StrokeThickness="4"
                  HorizontalAlignment="Stretch"/>
        </Canvas>
    </Grid>
</UserControl>

